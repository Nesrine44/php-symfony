{% block body %}
    <div class="c-learn-article-page__article" style="">
        <div class="position-relative overflow-hidden">
            <div class="c-learn-article-page__content">
                <div class="padding-left-40 padding-right-40">
                    <h2 class="c-learn-article-page__heading">Experimentation</h2>
                </div>
                <div class="c-learn-article-page__hero">
                    <img class="c-learn-article-page__hero-image" src="{{ asset('/images/learn/experimentation/experiment-hero.jpg') }}"
