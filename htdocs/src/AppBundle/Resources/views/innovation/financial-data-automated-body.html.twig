{% set current_stage = (innovation.getStage()) ? innovation.getStage().getCssClass() : 'empty' %}
<tr>
    <td>Total A&P (k€)*</td>
    {% for item in fields['total_ap'] %}
        <td><span class="inner-padding">{{ item }}</span></td>
    {% endfor %}
</tr>
{% if not innovation.isAService() %}
    <tr>
        <td>CAAP (k€)*</td>
        {% for item in fields['caap'] %}
            <td><span class="inner-padding">{{ item }}</span></td>
        {% endfor %}
    </tr>
    <tr>
        <td>CM per case (€)*</td>
        {% for item in fields['cm_per_case'] %}
            <td><span class="inner-padding">{{ item }}</span></td>
        {% endfor %}
    </tr>
    {% if not innovation.isAService() and current_stage not in ['discover', 'ideate', 'experiment'] %}
        <tr>
            <td>COGS per case (€)*</td>
            {% for item in fields['cogs_per_case'] %}
                <td><span class="inner-padding">{{ item }}</span></td>
            {% endfor %}
        </tr>
    {% endif %}
{% endif %}